{
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "run-s setup:*",
    "setup:google": "bin/setup.mjs --no-deploy",
    "setup:build": "pnpm -F @groton/knowledgebase.builder run build",
    "setup:deploy": "run-s deploy",
    "deploy": "pnpm -F @groton/knowledgebase.server run deploy",
    "release": "run-s release:*",
    "release:changeset": "changeset version",
    "release:publish": "pnpm publish -r --otp $(op item get npm --otp)"
  },
  "devDependencies": {
    "@battis/eslint-config": "latest",
    "@battis/partly-gcloudy": "^0.4.3",
    "@battis/prettier-config": "latest",
    "@battis/qui-cli": "^0.4.2",
    "@changesets/cli": "^2.27.5",
    "npm-run-all": "^4.1.5"
  },
  "prettier": "@battis/prettier-config",
  "eslintConfig": {
    "extends": [
      "@battis/eslint-config"
    ]
  }
}
