{
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "setup": "run-s setup:*",
    "setup:gcp": "bin/setup.ts",
    "setup:deploy": "run-s deploy",
    "build": "run-s build:*",
    "build:indexer": "pnpm -F @groton/knowledgebase.indexer run build",
    "build:ui": "pnpm -F @groton/knowledgebase.ui run build",
    "build:router": "pnpm -F @groton.knowledgebase.router run build",
    "deploy": "run-s deploy:*",
    "deploy:build": "run-s build",
    "deploy:cache": "pnpm -F @groton/knowledgebase.indexer run upload",
    "deploy:deploy": "pnpm -F @groton/knowledgebase.router run deploy",
    "release": "run-s release:*",
    "release:changeset": "changeset version",
    "release:publish": "pnpm publish -r --otp $(op item get npm --otp)"
  },
  "devDependencies": {
    "@battis/eslint-config": "latest",
    "@battis/partly-gcloudy": "^0.4.5",
    "@battis/prettier-config": "latest",
    "@battis/qui-cli": "^0.4.2",
    "@changesets/cli": "^2.27.7",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.16.2"
  },
  "prettier": "@battis/prettier-config",
  "eslintConfig": {
    "extends": [
      "@battis/eslint-config"
    ]
  }
}
