{
  "name": "@groton/knowledgebase.indexer",
  "description": "Knowledgebase website",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:index": "bin/index.ts",
    "build:groups": "bin/groups.ts",
    "upload": "run-s upload:*",
    "upload:index": "node -e \"if (! require('fs').existsSync('../router/var/index.json')) { process.exit(1)} \" || run-s build:build",
    "upload:groups": "node -e \"if (! require('fs').existsSync('../router/var/groups.json')) { process.exit(1)} \" || run-s build:groups",
    "upload:upload": "bin/upload.ts"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.7",
    "@types/adm-zip": "^0.5.5",
    "@types/express": "^4.17.21",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.14.10",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.16.2"
  },
  "eslintConfig": {
    "languageOptions": {
      "sourceType": "module"
    }
  },
  "dependencies": {
    "@battis/qui-cli": "^0.4.2",
    "@google-cloud/local-auth": "^3.0.1",
    "@google-cloud/storage": "^7.11.3",
    "@googleapis/docs": "^3.0.2",
    "@googleapis/drive": "^8.11.0",
    "@groton/knowledgebase.index": "workspace:*",
    "@groton/knowledgebase.google": "workspace:*",
    "@groton/knowledgebase.config": "workspace:*",
    "adm-zip": "^0.5.14",
    "express": "^4.19.2",
    "google-auth-library": "^9.11.0",
    "mime-types": "^2.1.35",
    "open": "^10.1.0"
  }
}
